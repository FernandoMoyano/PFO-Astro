<style>
    .hero-bg {
      width: 300px;
      height: ;
      display: block;
      position: absolute;
      pointer-events: none;
    }

    .hero-bg-1 {
      top: 10px;
      left: 0;
    }

    .hero-bg-2 {
      bottom: -800px;
      right: 20px;
    }

  .container {
    width: 380px;
  }
  .hero {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .hero__title {
    font-size: var(--fontSize-5);
    font-weight: var(--weight-extraBold);
    color: var(--text-white);
  }

  .hero__development {
    font-size: var(--fontSize-10);
    background-image: var(--gradient-1);
    display: inline-block;
    -webkit-text-fill-color: transparent;
    -webkit-background-clip: text;
  }

  .hero__hi {
    color: var(--text-columbia-blue);
  }
  .hero__im {
    color: var(--text-columbia-blue);
    font-size: var(--fontSize-8);
  }

  .hero__description {
    color: var(--text-shadow-blue);
    font-size: var(--fontSize-9);
    line-height: var(--lineHeight-3);
  }

  @media screen and (min-width: 575px) {
    .container {
      width: var(--width-575);
    }
    .hero-bg {
      width: 500px;
      display: block;
      position: absolute;
      pointer-events: none;
    }

    .hero-bg-1 {
      top: 80px;
      left: 0;
    }

    .hero-bg-2 {
      bottom: -550px;
      right: 220px;
    }
  }

  @media screen and (min-width: 768px) {
    :root {
      --fontSize-10: 3.2rem;
      --fontSize-9: 1.3rem;
      --fontSize-3: 2rem;
    }
    .container {
      width: var(--width-768);
    }
    .hero__development {
      font-size: var(--fontSize-10);
    }
  }

  @media screen and (min-width: 1200px) {
    .container {
      width: var(--width-1200);
    }
  }
</style>
