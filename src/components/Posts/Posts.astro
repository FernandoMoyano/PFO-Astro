<style>
  /* Movil==================================> */
  * {
    margin: 0%;
    padding: 0;
    box-sizing: border-box;
  }

  .container {
    max-width: var(--width-380);
    margin: var(--section-padding) auto;
    /*    border: 1px solid gray; */
  }

  .post {
    display: grid;
    margin: 20px, auto;
  }

  .post__content {
    display: grid;
    gap: 15px;
    width: 90%;
    margin: 1rem auto;
    cursor: pointer;
  }

  .post__section h2 {
    background-image: var(--gradient-2);
    display: inline-block;
    -webkit-text-fill-color: transparent;
    -webkit-background-clip: text;
    font-size: var(--fontSize-3);
    margin: var(--section-padding) auto;
  }

  .post__article {
    border: 1px solid var(--bg-prussian-blue);
    border-radius: var(--radius-8);
    margin: 1rem 0;
    background-color: var(--bg-oxford-blue);
    gap: 1.3rem;
  }

  .post__imageContainer {
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-radius: var(--radius-8);
  }

  .post__image {
    width: 100%;
    height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--gradient-12);
    border-radius: var(--radius-8);
    object-fit: cover;
  }

  .post__imageContainer:hover .post__image {
    transform: scale(1.1);
  }

  .post__title {
    color: var(--text-columbia-blue);
    font-size: var(--fontSize-9);
  }

  .post__description {
    color: var(--text-wild-blue-yonder);
    font-size: var(--fontSize-9);
    line-height: var(--lineHeight-2);
  }

  .post__tag {
    padding: 5px;
    font-size: 12px;
    cursor: pointer;
    color: var(--text-shadow-blue);
  }

  .post__tag:hover {
    color: var(--text-carolina-blue);
  }

  .post__containerNext {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .post__next {
    width: 40px;
    height: 35px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: var(--radius-8);
    border: 1px solid var(--border-white-alpha-15);
    margin: 8px;
    cursor: pointer;
    color: var(--bg-wild-blue-yonder);
  }

  .post__next:hover {
    background-color: var(--text-carolina-blue);
    color: var(--text-white);
  }

  /* Tablet 1 =================================> */

  @media screen and (min-width: 575px) {
    .container {
      max-width: var(--width-575);
      margin: var(--section-padding) auto;
    }
    .post__article {
      margin: 1rem 0;
    }
  }

  /* Tablet 2 ==================================> */

  @media screen and (min-width: 768px) {
    .container {
      max-width: var(--width-768);
    }

    .post {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .post__section {
      grid-column: span 2;
    }

    .post__article {
      margin: none;
    }

    .post__containerNext {
      display: flex;
      justify-content: center;
      align-items: center;
      grid-column: span 2;
    }
  }

  /* Desktop ==================================> */

  @media screen and (min-width: 1200px) {
    .container {
      max-width: var(--width-1200);
    }

    .post {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: repeat(auto-fill, minmax(auto, 1fr));
      gap: 20px;
    }

    .post__article {
      margin: none;
    }

    .post__containerNext {
      display: flex;
      justify-content: center;
      align-items: center;
      grid-column: span 3;
    }

    .post__article--number1 {
      grid-column: 1 / 2;
      grid-row: 2 / 3;
    }

    .post__article--number2 {
      grid-column: 1 / 2;
      grid-row: 3 / 4;
    }

    .post__article--number3 {
      grid-column: 1 / 2;
      grid-row: 4 / 5;
    }

    .post__article--number4 {
      grid-column: 2 / span 2;
    }

    .post__article--number5 {
      grid-column: 2 / span 2;
    }

    .post__article--number6 {
      grid-column: 2 / 3;
      grid-row: 4 / 5;
    }

    .post__article--number7 {
      grid-column: 3 / 4;
      grid-row: 4 / 5;
    }

