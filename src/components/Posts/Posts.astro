<style>
  /* Movil==================================> */

  .container {
    max-width: var(--width-380);
    /*    border: 1px solid gray; */
    margin: var(--section-padding) auto;
  }

  .post {
    display: grid;
    margin: 20px, auto;
  }

  .post__content {
    width: 90%;
    margin: 1rem auto;
    cursor: pointer;
  }

  .post__section {
    color: var(--gradient-5);
    font-size: var(--fontSize-3);
    margin-bottom: var(--section-padding);
  }

  .post__article {
    border-radius: var(--radius-8);
    margin: 1rem;
    background-color: var(--border-white-alpha-16);
  }

  .post__article:hover{
    background-color: var(--border-white-alpha-17);
  }

  .post__imageContainer {
    width: 100%;
    height: 200px;
    overflow: hidden; /* Asegura que la imagen no salga del contenedor */
    border-radius: var(--radius-8);
  }

  .post__image {
    width: 100%;
    height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--gradient-12);
    border-radius: var(--radius-8);
    object-fit: cover;
  }

  .post__imageContainer:hover .post__image {
    transform: scale(1.1); /* Escala la imagen al pasar el mouse */
  }

  .post__title {
    color: var(--gradient-5);
    font-size: var(--fontSize-5);
  }

  .post__description {
    color: var(--gradient-6);
  }

  .post__tag {
    padding: 5px;
    /* border: 1px solid var(--border-white-alpha-15); */
    background-color: var(--hover-link);
    border-radius: var(--radius-8);
    font-size: 12px;
    cursor: pointer;
    color: var(--gradient-5);
  }

  .post__tag:hover {
    background-color: var(--border-white-alpha-15);
  }

  .post__containerNext {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .post__next {
    width: 40px;
    height: 35px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: var(--radius-8);
    border: 1px solid var(--border-white-alpha-15);
    margin: 8px;
    cursor: pointer;
    color: var(--gradient-5);
  }

  .post__next:hover {
    background-color: var(--gradient-12);
  }

  /* Tablet 1 =================================> */

  @media screen and (min-width: 575px) {
    .container {
      max-width: var(--width-575);
      /*   border: 1px solid gray; */
      margin: var(--section-padding) auto;
    }
  }

  /* Tablet 2 ==================================> */

  @media screen and (min-width: 768px) {
    .container {
      max-width: var(--width-768);
    }

    .post {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .post__section {
      grid-column: span 2;
    }

    .post__containerNext {
      display: flex;
      justify-content: center;
      align-items: center;
      grid-column: span 2;
    }
  }

  /* Desktop ===============================> */

  @media screen and (min-width: 1200px) {
    .container {
      max-width: var(--width-1200);
    }

    .post {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: repeat(auto-fill, minmax(auto, 1fr));
      gap: 20px;
    }

    .post__containerNext {
      display: flex;
      justify-content: center;
      align-items: center;
      grid-column: span 3;
    }

    .post__article--number1 {
      grid-column: 1 / 2;
      grid-row: 2 / 3;
    }

    .post__article--number2 {
      grid-column: 1 / 2;
      grid-row: 3 / 4;
    }

    .post__article--number3 {
      grid-column: 1 / 2;
      grid-row: 4 / 5;
    }

    .post__article--number4 {
      grid-column: 2 / span 2;
    }

    .post__article--number5 {
      grid-column: 2 / span 2;
    }

    .post__article--number6 {
      grid-column: 2 / 3;
      grid-row: 4 / 5;
    }

    .post__article--number7 {
      grid-column: 3 / 4;
      grid-row: 4 / 5;
    }
  }
</style>
